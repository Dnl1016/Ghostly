@model IEnumerable<Ghostly.Web.Data.Entities.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h2>Clientes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"> Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Usuario.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Usuario.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Usuario.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Usuario.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Usuario.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Usuario.PhoneNumber)
            </th>
            <th>
                Ventas
            </th>
            <th></th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ventas.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
